{
  "name": "storeon-inferno",
  "version": "0.1.0",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "git@github.com:distolma/storeon-inferno.git",
  "author": "Dmytro Mostovyi <djmakaron2009@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=8.3.0"
  },
  "files": ["index.js", "index.d.ts"],
  "keywords": [
    "storeon",
    "state",
    "inferno"
  ],
  "scripts": {
    "start": "parcel index.html --open",
    "lint": "eslint ./*.js",
    "test": "jest --coverage && yarn lint && size-limit"
  },
  "peerDependencies": {
    "inferno": "^7.4.0",
    "storeon": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@logux/eslint-config": "^36.1.2",
    "@size-limit/dual-publish": "^4.4.5",
    "@size-limit/preset-small-lib": "^4.4.5",
    "babel-jest": "^25.3.0",
    "babel-plugin-inferno": "^6.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "dual-publish": "^0.10.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-inferno": "^7.14.3",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "inferno": "^7.4.2",
    "inferno-test-utils": "^7.4.2",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "parcel-bundler": "^1.12.4",
    "size-limit": "^4.4.5",
    "storeon": "^2.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "loose": true,
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-inferno",
        {
          "imports": true
        }
      ],
      "transform-class-properties"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "size-limit": [
    {
      "name": "core",
      "import": {
        "index.js": "{ connectStoreon }"
      },
      "limit": "377 B",
      "ignore": [
        "inferno"
      ]
    }
  ],
  "eslintConfig": {
    "extends": [
      "@logux/eslint-config",
      "plugin:inferno/recommended"
    ],
    "rules": {
      "node/no-unpublished-require": "off",
      "func-style": "off"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ]
}
